#!/bin/ksh -l
#SBATCH --qos=normal
#SBATCH --mem=200000
#SBATCH --ntasks=24
#SBATCH --ntasks-per-core=1
#SBATCH --time=150

R --no-save < ./TWCR.v2.R

cd /scratch/hadpb/images
rm 1916_storm_members.v2.mp4
# Get rid of empty images - they make ffmpeg stop processing
#  These usually come from disc problems in the creation step.
find 1916-storm-members.v2/*.png -type f -empty -delete

ffmpeg -r 24 -pattern_type glob -i 1916-storm-members.v2/\*.png -c:v libx264 -threads 24 -preset slow -tune animation -profile:v high -level 4.2 -pix_fmt yuv420p -crf 22 -c:a copy 1916_storm_members.v2.mp4
